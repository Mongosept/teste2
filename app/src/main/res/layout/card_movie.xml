<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardMovie"
    android:layout_width="120dp"
    android:layout_height="150dp"
    android:layout_margin="5dp"
    android:layout_weight="1"
    android:background="#2268"
    android:orientation="horizontal"
    android:padding="5dp"
    android:paddingRight="20dp"
    android:scaleType="fitXY">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/movieId"
        android:layout_width="230dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:animationCache="false"
        android:padding="5dp">

        <ImageView
            android:id="@+id/movie_poster_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:orientation="horizontal"
            android:scaleType="fitXY"
            cardview:layout_constraintBottom_toBottomOf="parent"
            cardview:layout_constraintEnd_toEndOf="parent"
            cardview:layout_constraintStart_toStartOf="parent"
            cardview:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/movie_title_id"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="#CC2D2D2D"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            cardview:layout_constraintBottom_toBottomOf="@+id/movie_poster_id"
            cardview:layout_constraintEnd_toEndOf="parent"
            cardview:layout_constraintHorizontal_bias="0.0"
            cardview:layout_constraintStart_toStartOf="parent" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>